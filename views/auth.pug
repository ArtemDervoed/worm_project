extends layout

block content
    h1 Login
    form(action="/auth" method="post")
        label(for="email") Email
        input(id="email" type="email" name="email")
        span #{error.email}
        br
        label(for="password") Password
        input(id="password" type="password" name="password")
        span #{error.password}
        br
        input(type="submit" value="Отправить")